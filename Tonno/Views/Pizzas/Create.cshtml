            @Html.LabelFor(model => model.PizzaSoort, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.RadioButton("PizzaSoort", false, true) Normaal
                    @Html.RadioButton("PizzaSoort", true) Calzone
                    @Html.ValidationMessageFor(model => model.PizzaSoort, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IngredientId1, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IngredientId1")<div class="text-success" id="result1"></div>
                @Html.ValidationMessageFor(model => model.IngredientId1, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IngredientId2, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IngredientId2")<div class="text-success" id="result2"></div>
                @Html.ValidationMessageFor(model => model.IngredientId2, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IngredientId3, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IngredientId3")<div class="text-success" id="result3"></div>
                @Html.ValidationMessageFor(model => model.IngredientId3, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p id="totalPrice"></p>
                @Html.Hidden("BasePrice", "4")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

