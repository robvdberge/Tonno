<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Pizzaria Tonno", "Index", "Home", new { area = "" }, new { @class = "navbar-brand navbar-light" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", new { controller = "Home" }, new { @class = "text-dark" })</li>
                    <li>@Html.ActionLink("Over Tonno", "About", new { controller = "Home" }, new { @class = "text-dark" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", new { controller = "Home" }, new { @class = "text-dark" })</li>
                    <li>@Html.ActionLink("Maak een Pizza", "Create", new { controller = "Pizzas" }, new { @class = "text-dark" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-right">&copy; @DateTime.Now.Year -Tonno's Pizzeria</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
